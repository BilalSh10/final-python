pipeline {
    agent any
      stages {
        stage('git checkout') {
          steps {
            git branch: 'main', url: 'https://github.com/BilalSh10/final-python'
          }
        }
        stage('build image') {
          steps {
                sh 'docker -version'
          }
        }
        stage('run & test container'){
            steps {
                sh 'docker -version'
            }
        }
        stage('push to dockerhub') {
              steps {
                   sh 'docker -version'
              }
        }
      }
}
